		  #pragma Unused Y
		  
		  Dim c As Color = Me.FillColor
		  Call SelectColor(c, "Choose a Text Color")
		  Me.FillColor = c
		  ButtonCanvas1.FontColor = c
		End Function
	#tag EndEvent
	#tag Event
		Sub Open()
		  Me.FillColor = ButtonCanvas1.FontColor
		End Sub
	#tag EndEvent
